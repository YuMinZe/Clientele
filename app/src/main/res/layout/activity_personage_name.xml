<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zll.wuye.fragment.mypage.RegisterLogin.change.Personage_name"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wode_xiugainame_fanhui"
            android:layout_width="95px"
            android:layout_height="88px"
            android:src="@mipmap/wode_zuo"
            android:padding="17px"/>

        <TextView
            android:layout_marginLeft="22px"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_weight="1"
            android:text="修改昵称"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/wode_xiugainametv"
            android:layout_width="wrap_content"
            android:layout_height="88px"
            android:text="确定"
            android:gravity="center_vertical"
            android:textSize="36px"
            android:textColor="#6699CC"
            android:layout_marginRight="12px"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dddddd"/>

    <EditText
        android:background="@mipmap/juxingbeijing"
        android:id="@+id/wode_xiugainameed"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:hint="请输入昵称"/>

</com.zhy.autolayout.AutoLinearLayout>
