<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pingjia_zuo"
            android:layout_width="95px"
            android:layout_height="88px"
            android:src="@mipmap/wode_zuo"
            android:padding="17px"/>

        <TextView
            android:layout_marginRight="95px"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_weight="1"
            android:text="评价"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="#333333"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dddddd"/>
    <EditText
        android:id="@+id/pingjia_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36px"
        android:padding="20px"
        android:gravity="top"
        android:hint="请输入评价律师的内容"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="30px"
        android:background="@mipmap/juxingbeijing"/>


    <RadioGroup
        android:id="@+id/pingjia_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="24px">
        <RadioButton
            android:id="@+id/pingjia_rb3"
            android:textSize="32px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="满意"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/pingjia_rb2"
            android:textSize="32px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一般"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/pingjia_rb1"
            android:textSize="32px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不满意"
            android:gravity="center"/>


    </RadioGroup>

    <Button
        android:id="@+id/pingjia_tj"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40px"
        android:textColor="#ffffff"
        android:layout_width="500px"
        android:layout_height="70px"
        android:text="提交"
        android:textSize="32px"
        android:background="@mipmap/wode_denglu_anniu"/>

</com.zhy.autolayout.AutoLinearLayout>
