<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="750px"
              android:layout_height="180px">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="750px"
        android:layout_height="160px"
        android:orientation="horizontal">


    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:src="@mipmap/wode_denglu_logo"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="24px"
        android:id="@+id/myreplay_touxiang"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20px"
        android:layout_marginRight="24px">

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="用户姓名:"
            android:textSize="32px"
            android:textColor="#292929"
            android:id="@+id/myreplay_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-02-25"
            android:textSize="28px"
            android:textColor="#292929"
            android:id="@+id/myreplay_time"/>


    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="24px">

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="手机号:"
            android:textSize="28px"
            android:textColor="#292929"
            android:id="@+id/myreplay_photo"/>

        <Button
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="160px"
            android:layout_height="60px"
            android:background="#39A7B6"
            android:text="确认完成"
            android:textSize="28px"
            android:textColor="#ffffff"
            android:id="@+id/myreplay_queren"/>

    </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#DEDEDE"/>

</com.zhy.autolayout.AutoLinearLayout>