<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="250px"
              android:background="#f2f2f2"
                android:id="@+id/myweituo_ll">

    <ImageView
        android:id="@+id/myweituo_touxiang"
        android:layout_width="160px"
        android:layout_height="160px"
        android:src="@mipmap/wode_denglu_logo"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="590px"
        android:layout_height="250px"
        android:orientation="vertical"
        android:layout_marginLeft="30px"
        android:gravity="center_vertical"
        android:paddingTop="20px">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/myweituo_name"
                android:layout_width="0dp"
                android:layout_height="30px"
                android:text="姓名:"
                android:textSize="25px"
                android:layout_weight="1"/>

        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/myweituo_diyu"
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:textSize="25px"
            android:text="地域:"
            android:layout_marginTop="10px"/>

        <TextView
            android:layout_marginTop="10px"
            android:id="@+id/myweituo_techang"
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:textSize="25px"
            android:text="特长:"/>

        <TextView
            android:layout_marginTop="10px"
            android:id="@+id/myweituo_danwei"
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:textSize="25px"
            android:text="单位:"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="#39A7B6"
                android:layout_width="100px"
                android:layout_height="50px"
                android:text="已竞标"
                android:textSize="25px"
                android:layout_marginRight="70px"
                android:id="@+id/myweituo_canjia"/>


        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>