<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shouye_dianhuazixun_zuo"
            android:layout_width="95px"
            android:layout_height="88px"
            android:src="@mipmap/wode_zuo"
            android:padding="17px"/>


        <TextView
            android:id="@+id/lvshiliebiao_name"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_weight="1"
            android:text="电话咨询"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="#333333"
            />

        <ImageView
            android:layout_width="75px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="24px"
            android:src="@mipmap/zhaoren"/>

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dddddd"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="80px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/shouye_photo_diqu">

            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="地区"
                android:layout_marginLeft="24px"
                android:textSize="28px"
                android:textColor="#000000"
                android:id="@+id/shouye_photo_diqu_text"/>

            <ImageView
                android:id="@+id/shouye_diqu_image"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/shouye_xia"
                android:layout_marginRight="30px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="2px"
            android:layout_height="60px"
            android:background="#dddddd"
            android:layout_gravity="center_vertical"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="80px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/shouye_photo_leixing">

            <TextView
                android:id="@+id/shouye_photo_leixing_text"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="案件类型"
                android:layout_marginLeft="30px"
                android:textSize="28px"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/shouye_leixing_image"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/shouye_xia"
                android:layout_marginRight="30px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="2px"
            android:layout_height="60px"
            android:background="#dddddd"
            android:layout_gravity="center_vertical"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="80px"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/shouye_photo_nianxian">

            <TextView
                android:id="@+id/shouye_photo_nianxian_text"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="执业年限"
                android:layout_marginLeft="24px"
                android:textSize="28px"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/shouye_nianxian_image"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/shouye_xia"
                android:layout_marginRight="30px"/>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.cjj.MaterialRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:id="@+id/refresh"
        app:overlay="false"
        app:wave_show="true"
        app:wave_color="@color/material_green"
        app:wave_height_type="higher"
        >
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/shouye_dianhuazixun"/>

        </com.cjj.MaterialRefreshLayout>

    <TextView
        android:id="@+id/dianhua_shangla"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="已加载全部内容"
        android:textSize="24px"
        android:gravity="center"/>


</com.zhy.autolayout.AutoLinearLayout>
