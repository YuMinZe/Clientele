<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="552px"
              android:background="#ffffff"
                android:id="@+id/zixun_recycle_ll">
            
    <ImageView
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="320px"
        android:id="@+id/zixun_recycle_image"/>

    <TextView
        android:id="@+id/zixun_recycle_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="帖子标题:风景画"
        android:layout_marginTop="20px"
        android:textSize="32px"
        android:textColor="#333333"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"/>

    <TextView
        android:id="@+id/zixun_recycle_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#666666"
        android:text="内容:"
        android:textSize="24px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="20px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="24px"
        android:layout_marginBottom="20px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/zixun_recycle_nian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014.11.5"
            android:textColor="#39a7b6"
            android:textSize="24px"
            android:layout_marginRight="30px"/>

        <TextView
            android:id="@+id/zixun_recycle_shi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11.11.11"
            android:textColor="#39a7b6"
            android:textSize="24px"
            android:layout_marginRight="24px"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="900px"
        android:layout_height="20px"
        android:background="#dddddd"/>
    
</com.zhy.autolayout.AutoLinearLayout>