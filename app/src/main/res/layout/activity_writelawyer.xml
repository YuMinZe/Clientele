<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lvshihan_zuo"
            android:layout_width="95px"
            android:layout_height="88px"
            android:src="@mipmap/wode_zuo"
            android:padding="17px"/>

        <TextView
            android:layout_marginRight="95px"
            android:layout_width="0px"
            android:layout_height="78px"
            android:layout_weight="1"
            android:text="律师函"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="#333333"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dddddd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24px"
        android:layout_marginTop="30px"
        android:text="需求概述"
        android:textSize="32px"/>
    
    <EditText
        android:id="@+id/lvshihan_xuqiu"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:background="@mipmap/wenbenyubg"
        android:layout_marginTop="25px"
        android:hint="请简单描述一下您的需求。"
        android:enabled="true"
        android:gravity="top"
        android:padding="20px"/>

    <EditText
        android:id="@+id/lvshihan_name"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:background="@mipmap/wenbenyubg"
        android:layout_marginTop="30px"
        android:hint="您的姓名"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:paddingLeft="20px"/>

    <EditText
        android:id="@+id/lvshihan_photo"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:background="@mipmap/wenbenyubg"
        android:layout_marginTop="30px"
        android:hint="您的手机号"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:paddingLeft="20px"/>
    
    <Button
        android:textSize="36px"
        android:id="@+id/lvshihan_tijiao"
        android:layout_width="700px"
        android:layout_height="70px"
        android:text="提交并支付"
        android:background="@mipmap/wode_denglu_anniu"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:textColor="#ffffff"/>

</com.zhy.autolayout.AutoLinearLayout>
