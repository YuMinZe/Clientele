<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shouye_lvshixinxi_zuo"
            android:layout_width="95px"
            android:layout_height="88px"
            android:src="@mipmap/wode_zuo"
            android:padding="17px"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_weight="1"
            android:text="律师信息"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="#333333"
            android:layout_marginRight="95px"/>

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dddddd"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="382px"
            android:orientation="vertical"
            android:background="@mipmap/lvshixiangqing_bj">
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140px"
                >
                <ImageView
                    android:id="@+id/lvshixinxi_touxiang"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_marginTop="20px"
                    android:src="@mipmap/wode_denglu_logo"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:gravity="center"
                    android:layout_toRightOf="@id/lvshixinxi_touxiang"
                    android:layout_width="130px"
                    android:layout_height="wrap_content"
                    android:text="官方认证"
                    android:textColor="#ff1315"
                    android:background="@mipmap/lvshixiangqing_biankuang"
                    android:layout_marginTop="100px"
                    android:layout_marginLeft="20px"/>

            </com.zhy.autolayout.AutoRelativeLayout>

            <TextView
                android:id="@+id/lvshixinxi_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="24px"
                android:layout_marginTop="10px"
                android:textColor="#ffffff"
                android:text="中律联盟"/>

            <TextView
                android:id="@+id/lvshixinxi_techang"
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:gravity="center"
                android:textSize="24px"
                android:layout_marginTop="10px"
                android:textColor="#ffffff"
                android:text="法律顾问/财政"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/lvshixiangqing_techangbg"/>

            <RadioGroup
                android:id="@+id/lvshixinxi_rg"
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="110px"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/lvshixinxi_guanzhu"
                    android:drawableTop="@mipmap/lvshixiangqing_guanzhu"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100px"
                    android:text="关注"
                    android:button="@null"
                    android:textSize="25px"
                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="#827c77"/>

                <RadioButton
                    android:id="@+id/lvshixinxi_fuwu"
                    android:drawableTop="@mipmap/lvshixiangqing_fuwu"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100px"
                    android:text="服务"
                    android:button="@null"
                    android:textSize="25px"
                    android:textColor="#ffffff"
                    android:checked="false"/>
                <TextView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="#827c77"/>
                <RadioButton
                    android:id="@+id/lvshixinxi_dongtai"
                    android:drawableTop="@mipmap/lvshixiangqing_dongtai"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100px"
                    android:text="动态"
                    android:button="@null"
                    android:textSize="25px"
                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="#827c77"/>
                <RadioButton
                    android:id="@+id/lvshixinxi_zan"
                    android:drawableTop="@mipmap/lvshixiangqing_zan"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100px"
                    android:text="赞"
                    android:button="@null"
                    android:textSize="25px"
                    android:textColor="#ffffff"/>

            </RadioGroup>

        </com.zhy.autolayout.AutoLinearLayout>



        <TextView
            android:textSize="32px"
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:layout_marginTop="20px"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:text="执业信息:"
            android:textColor="#39a7b6"
            android:paddingLeft="24px"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f2f2f2"/>
    
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:orientation="horizontal"
        android:layout_marginLeft="24px"
        android:gravity="center_vertical"
        android:background="#ffffff">

        <TextView
            android:textSize="24px"
            android:gravity="center"
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:text="执业证号:"
            android:background="@mipmap/lvshixiangqing_techangbg"/>

        <TextView
            android:id="@+id/lvshixinxi_zhiyezheng"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="123456789"
            android:textSize="24px"
            android:layout_marginLeft="24px"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f2f2f2"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:orientation="horizontal"
        android:layout_marginLeft="24px"
        android:gravity="center_vertical"
        android:background="#ffffff">

        <TextView
            android:textSize="24px"
            android:gravity="center"
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:text="执业律所:"
            android:background="@mipmap/lvshixiangqing_techangbg"/>

        <TextView
            android:id="@+id/lvshixinxi_zhiyelvsuo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="北京律师联盟"
            android:textSize="24px"
            android:layout_marginLeft="24px"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f2f2f2"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:orientation="horizontal"
        android:layout_marginLeft="24px"
        android:gravity="center_vertical"
        android:background="#ffffff">

        <TextView
            android:textSize="24px"
            android:gravity="center"
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:text="执业年限:"
            android:background="@mipmap/lvshixiangqing_techangbg"/>

        <TextView
            android:id="@+id/lvshixinxi_gongzuonianxian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="10"
            android:textSize="24px"
            android:layout_marginLeft="24px"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f2f2f2"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:orientation="horizontal"
        android:layout_marginLeft="24px"
        android:gravity="center_vertical"
        android:background="#ffffff">

        <TextView
            android:textSize="24px"
            android:gravity="center"
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:text="所在地点:"
            android:background="@mipmap/lvshixiangqing_techangbg"/>

        <TextView
            android:id="@+id/lvshixinxi_suozaidi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="北京"
            android:textSize="24px"
            android:layout_marginLeft="24px"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#f2f2f2"/>

    <TextView
        android:textSize="32px"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:text="自我介绍:"
        android:textColor="#39a7b6"
        android:paddingLeft="24px"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f2f2f2"/>
    <TextView
        android:id="@+id/lvshixinxi_ziwojieshao"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:textSize="24px"
        android:text="爱上了愤怒了卡萨诺付了款纳斯里"
        android:textColor="#666666"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:padding="10px"
        android:background="@mipmap/wenbenyubg"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#f2f2f2"/>
    <TextView
        android:textSize="32px"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:text="服务:"
        android:textColor="#39a7b6"
        android:paddingLeft="24px"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f2f2f2"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:orientation="horizontal">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="180px"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/lvshixinxi_dianhuall">

                <ImageView
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:src="@mipmap/lvshixiangqing_duanxin"/>

                <TextView
                    android:id="@+id/lvshixinxi_dianhua"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2px"
                    android:text="电话咨询"/>

            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="#dddddd"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="180px"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/lvshixinxi_yuyuell">

                <ImageView
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:src="@mipmap/lvshixiangqing_naozhong"/>

                <TextView
                    android:id="@+id/lvshixinxi_yuyue"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2px"
                    android:text="预约见面"/>

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#f2f2f2"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:orientation="horizontal"
            android:id="@+id/lvshixinxi_gengduo"
            android:background="#ffffff">

            <TextView
                android:textSize="32px"
                android:gravity="center_vertical"
                android:background="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="60px"
                android:text="Ta的评价:"
                android:textColor="#39a7b6"
                android:layout_marginLeft="24px"/>
            <TextView
                android:textSize="32px"
                android:gravity="center_vertical"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:text="更多"
                android:textColor="#39a7b6"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/wode_you"
                android:layout_marginRight="24px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvshixiangqing_pingjia"/>


    </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
