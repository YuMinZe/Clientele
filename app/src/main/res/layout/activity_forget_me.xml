<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wode_gaimima_fanhui"
            android:layout_width="95px"
            android:layout_height="88px"
            android:src="@mipmap/wode_zuo"
            android:padding="17px"/>

        <TextView
            android:layout_marginRight="95px"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_weight="1"
            android:text="修改密码"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="#333333"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dddddd"/>
    <ImageView
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:background="@mipmap/wode_denglu_logo"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="20px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:orientation="vertical"
        android:background="@mipmap/juxingbeijing">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginTop="38px"
                android:layout_marginLeft="32px"
                android:src="@mipmap/wode_xiugaimima_yuan"/>
            <EditText
                android:id="@+id/wode_xiugaimima_yuan"
                android:layout_marginLeft="24px"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_margin="20px"
                android:textColorHint="#999999"
                android:textSize="32px"
                android:singleLine="true"
                android:hint="请输入您的原密码"
                android:inputType="textPassword"/>
        </com.zhy.autolayout.AutoLinearLayout>



        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginTop="38px"
                android:layout_marginLeft="32px"
                android:src="@mipmap/wode_xiugaimima_xin"/>
            <EditText
                android:id="@+id/wode_xiugaimima_xin"
                android:layout_marginLeft="24px"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120px"
                android:layout_margin="20px"
                android:textColorHint="#999999"
                android:textSize="32px"
                android:singleLine="true"
                android:hint="请输入新密码"
                android:inputType="textPassword"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginTop="38px"
                android:layout_marginLeft="32px"
                android:src="@mipmap/wode_xiugaimima_xin2"/>
            <EditText
                android:id="@+id/wode_xiugaimima_xin2"
                android:layout_marginLeft="24px"
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_margin="20px"
                android:textColorHint="#999999"
                android:textSize="32px"
                android:singleLine="true"
                android:hint="请再次输入密码"
                android:inputType="textPassword"/>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/wode_xiugaimima_queren"
        android:background="@mipmap/wode_denglu_anniu"
        android:layout_width="700px"
        android:layout_height="70px"
        android:text="确定修改"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:textColor="#ffffff"
        android:textSize="36px"/>

</com.zhy.autolayout.AutoLinearLayout>
