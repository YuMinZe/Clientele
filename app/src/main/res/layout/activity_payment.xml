<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/zhifuyimian_guanbi"
            android:layout_width="95px"
            android:layout_height="88px"
            android:src="@mipmap/wode_zuo"
            android:padding="17px"/>


        <TextView
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_weight="1"
            android:text="支付费用"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="#333333"
            android:layout_marginRight="60px"/>

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dddddd"/>
    
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal"
        android:textColor="#f2f2f2">

        <TextView
            android:gravity="center_vertical"
            android:layout_width="0px"
            android:layout_height="70px"
            android:layout_weight="1"
            android:text="支付类型"
            android:textColor="#333333"
            android:textSize="32px"
            android:layout_marginLeft="24px"/>

        <TextView
            android:id="@+id/zhifuyimian_name"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:gravity="center_vertical"
            android:layout_marginRight="24px"
            android:textSize="32px"
            android:text="名称"/>

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dddddd"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal"
        android:textColor="#f2f2f2">

        <TextView
            android:gravity="center_vertical"
            android:layout_width="0px"
            android:layout_height="70px"
            android:layout_weight="1"
            android:text="支付金额"
            android:textColor="#333333"
            android:textSize="32px"
            android:layout_marginLeft="24px"/>

        <TextView
            android:id="@+id/zhifuyimian_price"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:gravity="center_vertical"
            android:layout_marginRight="24px"
            android:textSize="32px"
            android:text="￥00.0"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#dddddd"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:text="选择支付方式"
        android:gravity="center_vertical"
        android:layout_marginLeft="24px"
        android:textColor="#333333"
        android:background="#f2f2f2"/>
    
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/zhifuyimian_zhifubaoll"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/zhifubao"
            android:layout_marginLeft="44px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textSize="28px"
                android:textColor="#666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐支付宝用户使用"
                android:textSize="22px"
                android:textColor="#666666"
                android:layout_marginTop="20px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/zhifuyimian_zhibubao"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="24px"
            android:src="@mipmap/kongyuan"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/zhifuyimian_weixinll"
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/weixin"
            android:layout_marginLeft="44px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textSize="28px"
                android:textColor="#666666"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐微信用户使用"
                android:textSize="22px"
                android:textColor="#666666"
                android:layout_marginTop="20px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/zhifuyimian_weixin"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="24px"
            android:src="@mipmap/kongyuan"/>

    </com.zhy.autolayout.AutoLinearLayout>
    
    <Button
        android:id="@+id/zhifuyimian_queren"
        android:layout_width="700px"
        android:layout_height="70px"
        android:text="确认支付"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40px"
        android:background="@mipmap/wode_denglu_anniu"
        android:textColor="#ffffff"/>

</com.zhy.autolayout.AutoLinearLayout>
