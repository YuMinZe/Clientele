<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wode_lvshixinxi_zuo"
            android:layout_width="95px"
            android:layout_height="88px"
            android:src="@mipmap/wode_zuo"
            android:padding="17px"/>

        <TextView
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_weight="1"
            android:text="律师信息"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="#333333"
            android:layout_marginRight="95px"/>

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dddddd"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="382px"
                android:orientation="vertical"
                android:background="@mipmap/lvshixiangqing_bj">
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="140px"
                    >
                    <ImageView
                        android:id="@+id/lvshixinxi_touxiang"
                        android:layout_width="120px"
                        android:layout_height="120px"
                        android:layout_marginTop="20px"
                        android:src="@mipmap/wode_denglu_logo"
                        android:layout_centerHorizontal="true"/>

                </com.zhy.autolayout.AutoRelativeLayout>

                <TextView
                    android:id="@+id/wode_lvshixinxi_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24px"
                    android:layout_marginTop="10px"
                    android:textColor="#ffffff"
                    android:text="中律联盟"/>

                <TextView
                    android:id="@+id/wode_lvshixinxi_techang"
                    android:layout_width="wrap_content"
                    android:layout_height="60px"
                    android:gravity="center"
                    android:textSize="24px"
                    android:layout_marginTop="10px"
                    android:textColor="#ffffff"
                    android:text="法律顾问/财政"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/lvshixiangqing_techangbg"/>

            </com.zhy.autolayout.AutoLinearLayout>



            <TextView
                android:textSize="32px"
                android:gravity="center_vertical"
                android:background="#ffffff"
                android:layout_marginTop="20px"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:text="执业信息:"
                android:textColor="#39a7b6"
                android:paddingLeft="24px"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:background="#f2f2f2"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:orientation="horizontal"
                android:layout_marginLeft="24px"
                android:gravity="center_vertical"
                android:background="#ffffff">

                <TextView
                    android:textSize="24px"
                    android:gravity="center"
                    android:layout_width="130px"
                    android:layout_height="wrap_content"
                    android:text="执业证号:"
                    android:background="@mipmap/lvshixiangqing_techangbg"/>

                <TextView
                    android:id="@+id/wode_lvshixinxi_zhiyezheng"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="123456789"
                    android:textSize="24px"
                    android:layout_marginLeft="24px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:background="#f2f2f2"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:orientation="horizontal"
                android:layout_marginLeft="24px"
                android:gravity="center_vertical"
                android:background="#ffffff">

                <TextView
                    android:textSize="24px"
                    android:gravity="center"
                    android:layout_width="130px"
                    android:layout_height="wrap_content"
                    android:text="执业律所:"
                    android:background="@mipmap/lvshixiangqing_techangbg"/>

                <TextView
                    android:id="@+id/wode_lvshixinxi_zhiyelvsuo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="北京律师联盟"
                    android:textSize="24px"
                    android:layout_marginLeft="24px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:background="#f2f2f2"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:orientation="horizontal"
                android:layout_marginLeft="24px"
                android:gravity="center_vertical"
                android:background="#ffffff">

                <TextView
                    android:textSize="24px"
                    android:gravity="center"
                    android:layout_width="130px"
                    android:layout_height="wrap_content"
                    android:text="执业年限:"
                    android:background="@mipmap/lvshixiangqing_techangbg"/>

                <TextView
                    android:id="@+id/wode_lvshixinxi_gongzuonianxian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="10"
                    android:textSize="24px"
                    android:layout_marginLeft="24px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:background="#f2f2f2"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:orientation="horizontal"
                android:layout_marginLeft="24px"
                android:gravity="center_vertical"
                android:background="#ffffff">

                <TextView
                    android:textSize="24px"
                    android:gravity="center"
                    android:layout_width="130px"
                    android:layout_height="wrap_content"
                    android:text="所在地点:"
                    android:background="@mipmap/lvshixiangqing_techangbg"/>

                <TextView
                    android:id="@+id/wode_lvshixinxi_suozaidi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="北京"
                    android:textSize="24px"
                    android:layout_marginLeft="24px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="#f2f2f2"/>

            <TextView
                android:textSize="32px"
                android:gravity="center_vertical"
                android:background="#ffffff"
                android:layout_marginTop="20px"
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:text="竞标宣言"
                android:textColor="#39a7b6"
                android:paddingLeft="24px"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:background="#f2f2f2"/>

                <TextView
                    android:id="@+id/wode_lvshixinxi_ziwojieshao"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:textSize="30px"
                    android:text="爱上了愤怒了卡萨诺付了款纳斯里"
                    android:textColor="#666666"
                    android:layout_margin="20px"
                    android:padding="10px"
                    android:background="@mipmap/wenbenyubg"/>
    <TextView
        android:textSize="32px"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:text="服务报价:0.1"
        android:textColor="#39a7b6"
        android:paddingLeft="24px"
        android:id="@+id/wode_lvshixinxi_baojia"/>

    <Button
        android:id="@+id/wode_lvshixinxi_zhiding"
        android:layout_width="700px"
        android:layout_height="70px"
        android:background="@mipmap/wode_denglu_anniu"
        android:text="指定TA"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40px"/>

    </com.zhy.autolayout.AutoLinearLayout>
            </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>
