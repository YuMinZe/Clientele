<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zll.wuye.fragment.mypage.RegisterLogin.change.Personage_sex">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wode_xiugaisex_fanhui"
            android:layout_width="95px"
            android:layout_height="88px"
            android:src="@mipmap/wode_zuo"
            android:padding="17px"/>

        <TextView
            android:layout_marginLeft="95px"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_weight="1"
            android:text="修改性别"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="#333333"
            android:layout_marginRight="22px"/>
        <TextView
            android:id="@+id/wode_xiugaisextv"
            android:layout_width="wrap_content"
            android:layout_height="88px"
            android:text="确定"
            android:gravity="center_vertical"
            android:textSize="36px"
            android:textColor="#6699CC"
            android:layout_marginRight="12px"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dddddd"/>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/xiugaixingbie_iv1"
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@mipmap/xingbiewei"
                android:layout_marginLeft="68px"/>

            <TextView
                android:id="@+id/xiugaixingbie_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textSize="32px"
                android:layout_marginLeft="24px"/>

            <TextView
                android:layout_width="2px"
                android:layout_height="88px"
                android:background="#dddddd"
                android:layout_marginLeft="223px"/>

            <ImageView
                android:id="@+id/xiugaixingbie_iv2"
                android:layout_width="30px"
                android:layout_height="30px"
                android:src="@mipmap/xingbiewei"
                android:layout_marginLeft="68px"/>

            <TextView
                android:id="@+id/xiugaixingbie_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="32px"
                android:layout_marginLeft="24px"/>

        </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
