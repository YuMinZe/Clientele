<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

       <com.zhy.autolayout.AutoLinearLayout
           android:layout_width="0px"
           android:layout_height="440px"
           android:orientation="vertical"
           android:layout_weight="4"
           android:gravity="center"
           android:id="@+id/shouye_zaixianzixun">

           <ImageView
               android:layout_width="110px"
               android:layout_height="110px"
               android:src="@mipmap/shouye_zaixianzixun"/>
           
           <TextView
               android:gravity="center_horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20px"
               android:textSize="32px"
               android:textColor="#333333"
               android:text="在线咨询"/>
           <TextView
               android:gravity="center_horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20px"
               android:textSize="24px"
               android:textColor="#999999"
               android:text="专业律师帮您解答"/>

       </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="#dddddd"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="0dp"
        android:layout_height="440px"
        android:layout_weight="5"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/shouye_anjianweituo"
            android:layout_width="match_parent"
            android:layout_height="220px"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="90px"
                android:layout_height="90px"
                android:layout_marginLeft="40px"
                android:src="@mipmap/shouye_weituo"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="192px"
                android:layout_marginLeft="34px"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="案件委托"
                    android:textColor="#333333"
                    android:textSize="32px"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="找律师，打官司"
                    android:textColor="#999999"
                    android:textSize="18px"
                    android:layout_marginTop="10px"/>

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#dddddd"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="220px"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/shouye_zhaolvshi"
                android:layout_width="0dp"
                android:layout_height="220px"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:src="@mipmap/shouye_zhaolvshi"
                    />
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="找律师"
                    android:textColor="#333333"
                    android:textSize="28px"
                    android:layout_marginTop="10px"/>

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="找您满意的律师"
                    android:textColor="#999999"
                    android:textSize="18px"
                    android:layout_marginTop="10px"/>


            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:layout_width="2px"
                android:layout_height="220px"
                android:background="#dddddd"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/shouye_falvshihan"
                android:layout_width="0dp"
                android:layout_height="220px"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingBottom="30px">

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_marginTop="40px"
                    android:src="@mipmap/shouye_lvshihan"
                    />
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发律师函"
                    android:textColor="#333333"
                    android:textSize="28px"
                    android:layout_marginTop="10px"/>


            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>