<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="342px">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/wode_yuyue_price"
            android:text="支付金额:500.0￥"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#f57917"
            android:textSize="30px"
            android:layout_marginLeft="24px"/>

        <TextView
            android:id="@+id/wode_yuyue_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#39a7b6"
            android:textSize="18px"
            android:text="购买时间:2017.5.6"
            android:layout_marginRight="24px"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/wode_yuyue_touxiang"
        android:layout_width="130px"
        android:layout_height="130px"
        android:src="@mipmap/wode_denglu_logo"
        android:layout_marginLeft="30px"
        android:layout_marginTop="40px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="590px"
        android:layout_height="250px"
        android:orientation="vertical"
        android:layout_marginLeft="30px"
        android:gravity="center_vertical"
        >
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/wode_yuyue_name"
                android:layout_width="0dp"
                android:layout_height="30px"
                android:text="姓名:"
                android:textSize="25px"
                android:layout_weight="1"/>

            <TextView
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@mipmap/juhongbeijing"
                android:id="@+id/wode_yuyue_jingyan"
                android:layout_width="wrap_content"
                android:layout_height="30px"
                android:text="工作经验"
                android:textSize="25px"
                android:layout_marginRight="30px"/>
        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/wode_yuyue_diyu"
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:textSize="25px"
            android:text="地域:"
            android:layout_marginTop="10px"/>

        <TextView
            android:layout_marginTop="10px"
            android:id="@+id/wode_yuyue_techang"
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:textSize="25px"
            android:text="特长:"/>

        <TextView
            android:layout_marginTop="10px"
            android:id="@+id/wode_yuyue_danwei"
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:textSize="25px"
            android:text="单位:"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="63px"
            android:orientation="horizontal"
            android:layout_marginTop="10px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30px"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/wode_yuyue_queren"
                android:background="@mipmap/wode_denglu_anniu"
                android:textColor="#ffffff"
                android:layout_width="160px"
                android:layout_height="60px"
                android:text="确认已见面"
                android:textSize="24px"
                android:gravity="center"
                android:layout_marginRight="30px"/>


        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#dddddd"/>
</com.zhy.autolayout.AutoLinearLayout>